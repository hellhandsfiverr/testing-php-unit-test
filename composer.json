{
  "name": "alldigitalrewards/transactionsourceenum",
  "type": "library",
  "description": "Library for identifying Transaction Source.",
  "keywords": [
    "All Digital Rewards",
    "TransactionSourceEnum"
  ],
  "homepage": "https://bitbucket.org/alldigitalrewards/transaction-source-enum",
  "require": {
    "php" : "^8.0.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "AllDigitalRewards\\TransactionSourceEnum\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AllDigitalRewards\\TransactionSourceEnum\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests",
    "check-style": "phpcs -p --standard=phpcs.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=phpcs.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
